{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext", "esnext.asynciterable"],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "moduleResolution": "node",
    "pretty": true,
    "skipLibCheck": true,
    "target": "es2018"
  },
  "include": ["src/**/*", "typings/**/*"],
  "exclude": ["node_modules"]
}
